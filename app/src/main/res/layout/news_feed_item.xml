<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v7.widget.CardView
        android:id="@+id/home_cardView"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:paddingTop = "15dp"
        android:paddingBottom = "15dp" >

        <LinearLayout
            android:id = "@+id/newsFeedItem_linearLayout"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "vertical" >

            <TextView
                android:id="@+id/newsFeedItem_headlines_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize = "18sp" />

            <TextView
                android:id="@+id/newsFeedItem_trailText_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize = "14sp" />

            <ImageView
                android:src="@android:drawable/divider_horizontal_dark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/newsFeedItem_save_textView"
                android:text = "@string/newsFeedItem_save_textView_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize = "14sp"
                android:gravity = "center" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>