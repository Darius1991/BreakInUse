<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop = "8dp"
    android:layout_marginBottom = "8dp" >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/newsFeed_cardView"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp" >

        <LinearLayout
            android:id = "@+id/newsFeedItem_linearLayout"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "vertical"
            android:layout_marginTop = "16dp"
            android:layout_marginRight = "4dp"
            android:layout_marginLeft = "4dp">

            <ImageView
                android:id = "@+id/newsFeedItem_imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <com.breakinuse.widget.TypefaceTextView
                xmlns:nameSpace="http://schemas.android.com/apk/res/com.breakinuse"
                nameSpace:typeface = "RobotoCondensedRegular.ttf"
                android:id="@+id/newsFeedItem_headlines_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop = "5dp"
                android:layout_marginBottom = "5dp"
                android:layout_marginLeft = "5dp"
                android:layout_marginRight = "5dp"
                android:textColor = "@color/color_cardViewText"
                android:textSize = "18sp" />

            <com.breakinuse.widget.TypefaceTextView
                xmlns:nameSpace="http://schemas.android.com/apk/res/com.breakinuse"
                nameSpace:typeface = "RobotoCondensedRegular.ttf"
                android:id="@+id/newsFeedItem_trailText_textView"
                android:layout_width="wrap_content"
                android:layout_marginBottom = "5dp"
                android:layout_marginLeft = "5dp"
                android:layout_marginRight = "5dp"
                android:layout_height="40dp"
                android:textSize = "14sp" />

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:orientation = "horizontal"
                android:layout_marginTop = "15dp"
                android:layout_marginRight = "5dp"
                android:weightSum="4"
                android:layout_marginBottom = "5dp"
                android:layout_marginLeft = "5dp"
                android:baselineAligned = "false">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_weight = "1"
                    android:orientation = "vertical">

                    <com.breakinuse.widget.TypefaceTextView
                        xmlns:nameSpace="http://schemas.android.com/apk/res/com.breakinuse"
                        nameSpace:typeface = "RobotoCondensedRegular.ttf"
                        android:id = "@+id/newsFeedItem_sectionID"
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:text = "AAAAAAAAAAAAAAAAAA"
                        android:gravity = "center_horizontal" />


                    <com.breakinuse.widget.TypefaceTextView
                        xmlns:nameSpace="http://schemas.android.com/apk/res/com.breakinuse"
                        nameSpace:typeface = "RobotoCondensedRegular.ttf"
                        android:id = "@+id/newsFeedItem_author"
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:text = "BBBBBBBBBBBBBBBBB"
                        android:gravity = "center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_weight = "3"
                    android:orientation = "horizontal"
                    android:layout_gravity = "center_vertical"
                    android:gravity = "center">

                    <ImageView
                        android:id = "@+id/newsFeedItem_saveButton"
                        android:src="@drawable/ic_bookmark_border_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp" />


                    <ImageView
                        android:id = "@+id/newsFeedItem_shareButton"
                        android:src="@drawable/ic_share_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp" />

                </LinearLayout>

            </LinearLayout>

            <com.breakinuse.widget.TypefaceTextView
                xmlns:nameSpace="http://schemas.android.com/apk/res/com.breakinuse"
                nameSpace:typeface = "RobotoCondensedRegular.ttf"
                android:id="@+id/newsFeedItem_save_textView"
                android:text = "@string/newsFeedItem_textView_saveText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize = "14sp"
                android:gravity = "center" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>