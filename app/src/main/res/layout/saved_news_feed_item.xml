<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop = "8dp"
    android:layout_marginBottom = "8dp"
    android:layout_marginRight = "5dp"
    android:layout_marginLeft = "5dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/savedNewsFeed_cardView"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp" >

        <LinearLayout
            android:id = "@+id/savedNewsFeedItem_linearLayout"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "vertical" >

            <com.breakinuse.widget.TypefaceTextView
                xmlns:nameSpace="http://schemas.android.com/apk/res/com.breakinuse"
                nameSpace:typeface = "RobotoCondensedRegular.ttf"
                android:id="@+id/savedNewsFeedItem_headlines_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop = "5dp"
                android:layout_marginBottom = "5dp"
                android:layout_marginLeft = "5dp"
                android:layout_marginRight = "5dp"
                android:textColor = "@color/color_cardViewText"
                android:textSize = "18sp" />

            <com.breakinuse.widget.TypefaceTextView
                xmlns:nameSpace="http://schemas.android.com/apk/res/com.breakinuse"
                nameSpace:typeface = "RobotoCondensedRegular.ttf"
                android:id="@+id/savedNewsFeedItem_trailText_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom = "5dp"
                android:layout_marginLeft = "5dp"
                android:layout_marginRight = "5dp"
                android:textSize = "14sp" />

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:orientation = "horizontal"
                android:layout_marginTop = "15dp"
                android:layout_marginRight = "5dp"
                android:weightSum="4"
                android:layout_marginBottom = "5dp"
                android:layout_marginLeft = "5dp"
                android:baselineAligned = "false">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_weight = "1"
                    android:orientation = "vertical">

                    <com.breakinuse.widget.TypefaceTextView
                        xmlns:nameSpace="http://schemas.android.com/apk/res/com.breakinuse"
                        nameSpace:typeface = "RobotoCondensedRegular.ttf"
                        android:id = "@+id/savedNewsFeedItem_sectionID"
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:text = "AAAAAAAAAAAAAAAAAA"
                        android:gravity = "center_horizontal" />


                    <com.breakinuse.widget.TypefaceTextView
                        xmlns:nameSpace="http://schemas.android.com/apk/res/com.breakinuse"
                        nameSpace:typeface = "RobotoCondensedRegular.ttf"
                        android:id = "@+id/savedNewsFeedItem_author"
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:text = "BBBBBBBBBBBBBBBBB"
                        android:gravity = "center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    android:layout_weight = "3"
                    android:orientation = "horizontal"
                    android:layout_gravity = "center_vertical">

                    <ImageView
                        android:id = "@+id/savedNewsFeedItem_shareButton"
                        android:src="@drawable/ic_share_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight = "1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp" />

                    <ImageView
                        android:id = "@+id/savedNewsFeedItem_deleteButton"
                        android:src="@drawable/ic_delete_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight = "1"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>